<div class="stud_list">
<p id="notice"><%= notice %></p>
<h1>Student List</h1>
</div>
<table class="stud_table table table-dark">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Year of birth</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Fathers name</th>
      <th>Mothers name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.year_of_birth %></td>
        <td><%= student.gender %></td>
        <td><%= student.address %></td>
        <td><%= student.fathers_name %></td>
        <td><%= student.mothers_name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student , class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_student_path(student) , class: "btn btn-info"%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: "btn btn-info" %>
</div>