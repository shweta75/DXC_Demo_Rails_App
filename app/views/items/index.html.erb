<p id="notice"><%= notice %></p>
<div class="container hr">
  <h1>Items</h1>

  <%= link_to 'Download as Excel', items_path(format: :xlsx), class: "btn btn-primary" %>
  <%= link_to 'Upload from Excel', new_items_import_path, class: "btn btn-primary" %>
  <%= link_to 'New Item', new_item_path, class: "btn btn-primary" %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= link_to 'Show', item, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>